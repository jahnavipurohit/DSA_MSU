{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C file",
      "type": "shell",
      "command": "gcc",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/output"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}/output"
      ],
      "problemMatcher": ["$gcc"]
    }
  ]
}
